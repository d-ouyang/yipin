.catalog-list, .goods-list{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx 30rpx 0;
  background-color: #fff;
}

.selected-list {
  position: fixed;
  height: 160rpx;
  bottom: 100rpx;
  left: 0;
  display: flex;
  white-space: nowrap;
}

.selected-item {
  width: 160rpx;
  height: 160rpx;
}

.operation, .operation-delete {
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  right: 0;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background-color: #F7291B;
}

.operation-delete {
  z-index: 9999;
}

.select-icon {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  right: 30rpx;
  top: 30rpx;
}