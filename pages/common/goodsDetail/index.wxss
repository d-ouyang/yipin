.container {
  padding-bottom: 100rpx;
}

.banner {
  position: relative;
  width: 100%;
}

.collect-icon {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}

swiper {
  height: 750rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.base-info {
  box-sizing: border-box;
  padding: 20rpx 40rpx 0;
  margin-bottom: 60rpx;
}
.base-info view{
  line-height: 1.5;
}

.title {
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}
.price {
  font-size: 28rpx;
  font-weight: 500;
  color: #F7291B; 
  margin-bottom: 20rpx;
}

.image-info-item {
  width: 100%;
  height: 750rpx;
  margin-bottom: 20rpx;
}

.carts-btns {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 100rpx;
  color: #fff;
  font-size: 36rpx;
  display: flex;
  align-items: center;
}

.carts-btns view {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  /* width: 50%; */
  flex: 1;
}

.add-carts {
  background-color: #F7291B;
}

.goto-carts {
  background-color: #1A1A1A;
}

