.container {
  padding: 20rpx 15rpx 100rpx;
}

.solutions-detail {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}

.solutions-detail image {
  width: 350rpx;
  height: 350rpx;
  margin-bottom: 20rpx;
}

.add {
  width: 350rpx;
  height: 350rpx;
  line-height: 350rpx;
  font-size: 120rpx;
  color: #888;
  font-weight: 500;
  text-align: center;
  background-color: #fff; 
}

.store {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background-color: #F7291B;
}