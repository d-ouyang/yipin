.container{
  padding-bottom: 100rpx;
}

.solution-list {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-between;
}

.solution-item {
  position: relative;
  width: 360rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
}

.solution-imgs {
  height: 360rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}

.solution-imgs image {
  width: 180rpx;
  height: 180rpx;
}

.solution-imgs .add {
  width: 180rpx;
  height: 180rpx;
  line-height: 180rpx;
  font-size: 80rpx;
  color: #888;
  font-weight: 500;
  text-align: center;
}

.solution-info {
  font-size: 28rpx;
  color: #1A1A1A;
  font-weight: 500;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.solution-info .price {
  color: #F7291B;
} 

.price::before {
  content: 'ï¿¥'
}
.price::after {
  content: '.00'
}

.solution-edit {
  display: flex;
  flex-direction: row-reverse;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.solution-edit image {
  width: 36rpx;
  height: 36rpx;
}

.add-solution {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background-color: #F7291B;
}