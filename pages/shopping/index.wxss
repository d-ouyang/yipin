.goods-list{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx 30rpx 100rpx;
  background-color: #fff;
}

.goods-item{
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.goods-item image {
  position: relative;
  width: 320rpx;
  height: 420rpx;
  margin-bottom: 20rpx;
}

.item-info {
  width: 320rpx;
}

.item-title {
  font-weight: 500;
  color: #1A1A1A;
  width: 100%;
  margin-bottom: 20rpx;
}

.item-price {
  font-size: 28rpx;
  font-weight: 500;
  color: #F7291B;
}

.submit-solution {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background-color: #F7291B;
}