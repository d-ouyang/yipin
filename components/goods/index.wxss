@import "../common/index.wxss";

.goods-item{
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.goods-item image {
  position: relative;
  width: 320rpx;
  height: 420rpx;
  margin-bottom: 20rpx;
}

.item-info {
  width: 320rpx;
}

.item-title {
  font-weight: 500;
  color: #1A1A1A;
  width: 100%;
  margin-bottom: 20rpx;
}

.item-price {
  font-size: 28rpx;
  font-weight: 500;
  color: #F7291B;
}

.collect-icon {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 20rpx;
  bottom: 30rpx;
}