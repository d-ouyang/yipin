.container{
  background-color: #fff;
}
.modal-mask{
  position: absolute;
  width: 100vw;
  height: 100vh;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}
.modal-wrapper{
  position: absolute;
  width: 590rpx;
  height: 344rpx;
  border-radius: 8rpx;
  top: 50%;
  margin-top: -172rpx;
  left: 50%;
  transform: translateX(-50%);
}
.modal-box{
  width: 100%;
  height: 244rpx;
  box-sizing: border-box;
  border-bottom: 0.5px solid #EEEFF1; 
  padding: 52rpx 40rpx 0;
  background-color: #fff;
}
.modal-title{
  font-size: 34rpx;
  color: black;
  font-weight: 600;
  text-align: center;
  line-height: 1.0;
  margin-bottom: 36rpx;
}
.modal-content text{
  font-size: 30rpx;
  color: #888;
  line-height: 42rpx;
  /* text-align: left; */
  /* text-align: center; */
}
